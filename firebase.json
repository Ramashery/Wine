{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      
      {
        "source": "/:category",
        "destination": "/catalog.html"
      },
      
      {
        "source": "/:category/:slug",
        "destination": "/product.html"
      }
    ]
  }
}
